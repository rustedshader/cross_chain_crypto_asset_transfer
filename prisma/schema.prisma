generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Transaction {
  id         String   @id @default(uuid())
  userId     String   // This will reference auth.users.id
  type       String
  tokenId    String
  lockHash   String?
  mintHash   String?
  burnHash   String?
  unlockHash String?
  timestamp  DateTime @default(now())
  status     String

  @@index([userId])
}

model WhiteListedMerkle {
  id        String   @id @default(uuid())
  tokenId   String
  userAddress  String
  timestamp DateTime @default(now())
}



// Add this to your existing schema.prisma
model MerkleRoot {
  id          String   @id @default(uuid())
  root        String   // To store the Merkle root hash
  timestamp   DateTime @default(now())
  active      Boolean  @default(true)  // To track which root is currently active
  emails      String[] // To store the list of emails used to generate this root
  description String?  // Optional field to add context about this root

  @@index([active])
}